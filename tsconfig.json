{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "lib": ["dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "test/*": ["../test/*"]
    },
    "preserveConstEnums": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
